{
  "manifest_version": 3,
  "name": "Patch Collector",
  "version": "1.1",
  "description": "Bulk download patches with smart renaming and advanced search for Line6 CustomTone.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://line6.com/customtone/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://line6.com/customtone/*"
      ],
      "js": [
        "js/constants.js",
        "js/utils.js",
        "js/progress.js",
        "js/downloader.js",
        "js/ui.js",
        "js/content.js"
      ],
      "css": [
        "css/styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "guide.html",
        "privacy_policy.html",
        "icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}